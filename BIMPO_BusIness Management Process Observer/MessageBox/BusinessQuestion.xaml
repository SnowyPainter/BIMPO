        </Grid>
        <TextBlock x:Name="contentTextBlock" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Margin="15,35,19,44" Height="70" Width="325" FontSize="16" TextAlignment="Center"><Run Text=" T"/><Run Text="EXT"/></TextBlock>
        <Button x:Name="OkBtn_Clicked" Content="네" Height="Auto" Margin="180,108,104,9" Background="#8F35C8" BorderBrush="White" Click="OkBtn_Clicked_Click"/>
        <Button x:Name="NoBtn_Clicked" Content="아니요" Height="Auto" Margin="265,108,14,9" Background="#8037AE" BorderBrush="White" Click="NoBtn_Clicked_Click"/>

    </Grid>
</Window>
